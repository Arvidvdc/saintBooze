<%- include("../partials/header") -%>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/buttons.css">

    <div class="container-fluid sgtContent">
        <form action="/maintenance/new" method="post">
            <div class="row gy-2 gx-3 align-items-center justify-content-center">
                <div class="row" style="width: auto;">
                    <div class="back" style="float: left;"><i class="fas fa-arrow-circle-left" onclick="history.back();"></i></div>
                </div>
                    <div class="col-auto">
                    <div class="form-floating">
                        <select class="form-select" name="category" id="category" onchange="showHiddenOptions()" required autofocus>
                            <option selected></option>
                            <option value="category">Soort drank</option>
                            <option value="subcategory">Specificatie</option>
                            <option value="continent">Werelddeel</option>
                        </select>
                        <label for="category">Geef een groep op</label>
                    </div>
                </div>
                <div class="col-auto">
                    <div class="form-floating">
                        <input type="text" class="form-control" id="item" name="item" required>
                        <label for="item">Geef item naam op</label>
                    </div>
                </div>
                
                <div class="col-auto" id="englishInput" style="display: none;">
                    <div class="form-floating">
                        <input type="text" class="form-control" id="english" name="english">
                        <label for="english">Geef engelse naam op</label>
                    </div>
                </div>
                <div class="col-auto" id="categoryMainInput" style="display: none;">
                    <div class="form-floating" style="min-width: 160px;">
                        <select class="form-select"name="categoryMain" id="categoryMain" required>
                            <option selected></option>
                            <% categoryMain.forEach(cat => { %>
                                <option value="<%= cat.item %>"><%= cat.item %></option>
                            <% }) %>
                        </select>
                        <label for="categoryMain">Geef soort drank op</label>
                    </div>
                </div>

                <div class="col-auto">
                    <div class="form-floating">
                        <textarea class="form-control" id="description" name="description" style="height: 60px"></textarea>
                        <label for="description">Geef eem omschijving op</label>
                    </div>
                </div>
                <div class="col-auto">
                    <button type="submit" class="btn but-sarge-default" style="padding-block: 15px;">Toevoegen</button>
                </div>
                <div class="col-auto">
                    <div class="form-check-input" data-bs-toggle="tooltip" data-bs-title="Meer toevoegen">
                        <input class="form-check-input" type="checkbox" id="addMore" name="addMore">
                    </div>
                </div>
            </div>
        </form>
    </div>
    <script src="/js/maintenanceNew.js"></script>
<%- include("../partials/footer") -%>